<!DOCTYPE html>
<html>
<head>
  <title></title>
  
</head>
<body background="/assets/addemployeebg.jpg">

<% provide(:title, "Edit user") %>
<div class="editemployee">
  
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

    <div style="width:600px; margin: 0px auto;">
      <div class="col-md-6">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
      <br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <br>
      <% if current_user.admin? %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <% end -%>
      <%= f.label "Birthday:" %> <br> 
      <%= f.date_select :birthday, :order => [:day, :month, :year], :start_year => 1900, :end_year => Time.now.year - 15 %>

      <%= f.label :contact_no, "Contact Number", class: 'con' %>
      <%= f.text_field :contact_no, class: 'form-control' %>
      

        <br>
      <% if current_user.admin? %>
      <%= f.label "Date Hired:" %><br>  
      <%= f.date_select :date_hired, :order => [:day, :month, :year], :start_year => 1900, :end_year => Time.now.year, class: 'form-control' %>     
      <% end -%>
      </div>
      
      <div class="col-md-6">

      <%= f.label :Address %>
      <%= f.text_field :address, class: 'form-control' %>
      <br>

      
      
      <% if current_user.admin? %>
        <%= f.label :status %>
        <%= select(:user, :status, [['Trainee', "Trainee"], ['Regular', "Regular"]], class: 'form-control' )%>
        <br><br>

        <%= f.label :Department, "Job:" %>
        <%= f.text_field :job, class: 'form-control' %>
        <br>

        <%= f.label :Position, "position:" %>
        <%= f.text_field :position, class: 'form-control' %>
        <br>

      <% end -%>

           <%= f.label :bank, "Bank" %>
        <br><%= f.text_field :bank, class: 'form-control' %>

        <br>

      <%= f.label :account_no, "Account Number" %>
      <%= f.text_field :account_no, class: 'form-control' %>
      <br>

      <% if current_user.admin? %>
      <%= f.label :base_salary, "Base Salary" %>
      <%= f.text_field :base_salary, class: 'form-control' %>
      <% end -%>
      </div>
      <div class="row" style="margin: 0px auto; text-align: center;">
        <div class="col-md-12">
            <%= f.file_field :profileimg, class: 'filestyle',  
            :'data-classButton' => "btn btn-primary btn-block",
            :'data-input' => 'false', classIcon:  'icon-plus', 
            :'data-buttonText' => 'upload profile image'  %> 

        </div>
      </div>
      
      <div class="row" style="margin: 0px auto; text-align: center;">
      <div class="col-md-12" style="margin-top: 20px;">
        <% if current_user.admin? %>
      <%= f.label "Admin?", class: 'admin' %>
      <%= f.check_box :admin, class: 'check_box_admin' %>
      <% end %>

      <%= f.submit "Save changes", class: "btn btn-primary btn-block" %>
      </div>
     </div>
    <% end %>
   </div>
</div>
</body>
</html>